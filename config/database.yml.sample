# PostgreSQL. Versions 8.2 and up are supported.

development:
  adapter: mysql2
  encoding: utf8
  pool: 5
  timeout: 5000
  database: gitbook_development
  username: root
  # password:
  socket: /tmp/mysql.sock
  # host:

# Warning: The database defined as "test" will be erased and
