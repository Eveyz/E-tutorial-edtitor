# Do not set this db to the same as development or production.
test:
  adapter: mysql2
  encoding: utf8
  pool: 5
  timeout: 5000
  database: gitbook_test
  username: root
  # password:
  socket: /tmp/mysql.sock
  # host:

production:
  adapter: mysql2
  encoding: utf8
  pool: 5
