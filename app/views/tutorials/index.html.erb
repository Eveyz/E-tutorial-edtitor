<div class="container">
  <% if @tutorials.present? %>
    <% @tutorials.each do |tutorial| %>
      <tr>
        <td><%= tutorial.title %></td>
        <td><%= tutorial.description %></td>
        <td><%= tutorial.user %></td>
        <td><%= link_to 'Show', tutorial %></td>
        <td><%= link_to 'Edit', edit_tutorial_path(tutorial) %></td>
        <td><%= link_to 'Destroy', tutorial, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  <% else %>
    <div class="row justify-content-center">
      <div class="col-8">
        <h1>Please create a new tutorial</h1>
        <p class="lead">Use the button down below to create a new tutorial</p>
        <hr class="my-4">
        <p>It uses utility classes</p>
        <p class="lead">
          <%= link_to 'New tutorial', new_tutorial_path, class: "btn btn-primary btn-lg" %>
        </p>
      </div>
    </div>
  <% end %>
</div>

<p id="notice"><%= notice %></p>

