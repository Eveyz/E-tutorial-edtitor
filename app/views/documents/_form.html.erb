<%= form_with(model: document, local: true) do |form| %>
  <% if document.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(document.errors.count, "error") %> prohibited this document from being saved:</h2>

      <ul>
      <% document.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <label for="documentTitle">Title</label>
    <%= form.text_field :title, class: "form-control", id: "documentTitle", placeholder: "Title" %>
  </div>

  <div class="form-group">
    <label for="documentDescription">Description (Optional)</label>
    <%= form.text_area :description, class: "form-control", id: "documentDescription", placeholder: "Description", rows: "3" %>
  </div>
  
  <div class="field" style="display:none">
    <%= form.text_field :user_id, :value => 1 %>
  </div>

  <div class="actions">
    <%= form.submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>